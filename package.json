{
  "name": "akazas-love",
  "displayName": "Akaza's Love - Musical Typing üé∂ and Falling Snow ‚ùÑÔ∏è",
  "description": "Transform your typing into beautiful music and animated snowfall",
  "publisher": "lanly-dev",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "akazas-love-webview",
          "title": "Welcome Home",
          "icon": "media/akaza.svg"
        }
      ]
    },
    "views": {
      "akazas-love-webview": [
        {
          "type": "webview",
          "id": "akazas-love.webview",
          "name": "Hakuji üéÜ",
          "icon": "media/akaza.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "akazas-love.playSong",
        "title": "Play Akaza's Love Theme",
        "category": "Akaza's Love"
      },
      {
        "command": "akazas-love.stopSong",
        "title": "Stop Akaza's Love Theme",
        "category": "Akaza's Love"
      },
      {
        "command": "akazas-love.toggleMusicTyping",
        "title": "Toggle Music Typing",
        "category": "Akaza's Love"
      },
      {
        "command": "akazas-love.toggleSnowInEditor",
        "title": "Toggle Snowfall in Editor",
        "category": "Akaza's Love"
      },
      {
        "command": "akazas-love.toggleSnowDriven",
        "title": "Toggle Typing-Driven Snowfall",
        "category": "Akaza's Love"
      },
      {
        "command": "akazas-love.showPanel",
        "title": "Show Akaza's Love Panel",
        "category": "Akaza's Love"
      },
      {
        "command": "akazas-love.openSettings",
        "title": "Open Akaza's Love Settings",
        "icon": "$(gear)",
        "category": "Akaza's Love"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "akazas-love.openSettings",
          "when": "view == akazas-love.webview",
          "group": "navigation@100"
        }
      ]
    },
    "configuration": {
      "title": "Akaza's Love",
      "properties": {
        "akazas-love.musicTyping": {
          "type": "boolean",
          "default": true,
          "description": "Enable musical typing sounds"
        },
        "akazas-love.snowInEditor": {
          "type": "boolean",
          "default": true,
          "description": "Enable snowfall overlay in editors"
        },
        "akazas-love.snowEditorConfigs": {
          "type": "object",
          "default": {
            "colorLight": "#ffffffcc",
            "colorDark": "#aaaaffcc",
            "density": 50,
            "maxColumns": 160,
            "size": 10,
            "speed": 5
          },
          "properties": {
            "colorLight": {
              "type": "string",
              "default": "#ffffffcc",
              "description": "Light theme snowflake color"
            },
            "colorDark": {
              "type": "string",
              "default": "#aaaaffcc",
              "description": "Dark theme snowflake color"
            },
            "density": {
              "type": "number",
              "default": 50,
              "minimum": 0,
              "maximum": 100,
              "description": "Number of snowflakes per visible editor"
            },
            "maxColumns": {
              "type": "number",
              "default": 160,
              "minimum": 80,
              "maximum": 500,
              "description": "Maximum number of columns to consider for snowflake placement (higher = more spread out)"
            },
            "size": {
              "type": "number",
              "default": 10,
              "minimum": 5,
              "maximum": 50,
              "description": "Base snowflake size in pixels"
            },
            "speed": {
              "type": "number",
              "default": 5,
              "minimum": 1,
              "maximum": 10,
              "description": "Snowfall speed in lines per second"
            }
          },
          "description": "Snowfall overlay configuration for editors"
        },
        "akazas-love.snowPanelConfigs": {
          "type": "object",
          "default": {
            "colorLight": "#7BB3E6",
            "colorDark": "#bcdfff",
            "density": 50,
            "backgroundColor": null
          },
          "properties": {
            "colorLight": {
              "type": "string",
              "default": "#7BB3E6",
              "description": "Light theme snowflake color, no alpha channel"
            },
            "colorDark": {
              "type": "string",
              "default": "#bcdfff",
              "description": "Dark theme snowflake color, no alpha channel"
            },
            "density": {
              "type": "number",
              "default": 50,
              "minimum": 0,
              "maximum": 100,
              "description": "Number of snowflakes per visible webview panel"
            },
            "backgroundColor": {
              "type": "string",
              "default": null,
              "description": "Webview background color, could be hex or name, e.g. `#ffccff` or `pink` (null = no background color"
            }
          },
          "description": "Snowfall overlay configuration for the webview panel"
        },
        "akazas-love.typingDriven": {
          "type": "boolean",
          "default": false,
          "description": "Enable typing-driven snow: one snowflake per keypress, speed depends on typing rate (applies to both editor and webview)"
        },
        "akazas-love.volume": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "description": "Volume level for musical notes (0.0 to 1.0)"
        }
      }
    }
  },
  "scripts": {
    "efix": "eslint . --fix"
  },
  "dependencies": {
    "@tonejs/midi": "^2.0.28",
    "follow-redirects": "^1.15.9"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "eslint": "^9.34.0"
  }
}
