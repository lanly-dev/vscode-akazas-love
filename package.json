{
  "name": "akazas-love",
  "displayName": "Akaza's Love - Musical Typing",
  "description": "Transform your typing into beautiful music with musical note sounds for each keystroke",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "akazas-love-images",
          "title": "Akaza Images",
          "icon": "media/image-icon.svg"
        }
      ]
    },
    "views": {
      "akazas-love-images": [
        {
          "type": "webview",
          "id": "akazas-love.happyImageView",
          "name": "Happy Image",
          "icon": "media/image-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "akazas-love.playSong",
        "title": "Play Akaza's Love Theme",
        "category": "Akaza's Love"
      },
      {
        "command": "akazas-love.reloadMidi",
        "title": "Reload MIDI Theme",
        "category": "Akaza's Love"
      },
      {
        "command": "akazas-love.toggleSnowfall",
        "title": "Toggle Snowfall",
        "category": "Akaza's Love"
      }
    ],
    "configuration": {
      "title": "Akaza's Love",
      "properties": {
        "akazas-love.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable musical typing sounds"
        },
        "akazas-love.volume": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "description": "Volume level for musical notes (0.0 to 1.0)"
        },
        "akazas-love.output": {
          "type": "string",
          "enum": ["native", "portaudio"],
          "default": "portaudio",
          "description": "Choose audio output backend: 'native' uses the Node speaker module; 'portaudio' uses the external play-buffer binary"
        },
        "akazas-love.snowfall.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable snowfall overlay in editors"
        },
        "akazas-love.snowfall.density": {
          "type": "number",
          "default": 80,
          "minimum": 0,
          "maximum": 500,
          "description": "Number of snowflakes per visible editor"
        },
        "akazas-love.snowfall.speed": {
          "type": "number",
          "default": 5,
          "minimum": 0.1,
          "maximum": 10,
          "description": "Snowfall speed in lines per second"
        },
        "akazas-love.snowfall.size": {
          "type": "number",
          "default": 12,
          "minimum": 6,
          "maximum": 48,
          "description": "Base snowflake size in pixels"
        },
        "akazas-love.snowfall.color": {
          "type": "string",
          "default": "#ffffffcc",
          "description": "Snowflake color (hex or rgba)"
        }
      }
    }
  },
  "scripts": {
    "efix": "eslint . --fix"
  },
  "dependencies": {
    "@tonejs/midi": "^2.0.28",
    "speaker": "^0.5.5",
    "follow-redirects": "^1.15.9"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "eslint": "^9.34.0"
  }
}
